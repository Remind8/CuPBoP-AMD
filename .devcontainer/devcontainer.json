{
	"name": "cupbop-amd-playground",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"settings": {
	},
	"extensions": [
		"ms-vscode-remote.remote-containers",
		"ms-vscode.cpptools-extension-pack",
		"tomoki1207.pdf",
		"GitHub.copilot",
		"ms-vscode.makefile-tools",
		"ms-python.python"
	],
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--cap-add=SYS_ADMIN",
		"--security-opt", "seccomp=unconfined",
		"--tmpfs", "/tmp",
		"--tmpfs", "/run",
		"--tmpfs", "/run/lock",
		"--shm-size=2g",
		"--init",
		"-e", "WKSPACE=${containerWorkspaceFolder}",
		"-v", "/sys/fs/cgroup:/sys/fs/cgroup:rw",
		"--privileged",
		"--gpus", "all"
	],
	"remoteUser": "vscode",
	"features": {
		"desktop-lite": {
			"password": "vscode",
			"webPort": "6080",
			"vncPort": "5901"
		}
	},
	"remoteEnv": {
		"PATH": "${containerEnv:PATH}:${containerWorkspaceFolder}/scripts:/opt/rocm/bin:/opt/rocm/rocprofiler/bin:/opt/rocm/opencl/bin"
	},
	"forwardPorts": [ 6080, 5901 ],
	"overrideCommand": false,
	"postStartCommand": "${containerWorkspaceFolder}/scripts/postinit-container.sh",
	"initializeCommand": [
		"${localWorkspaceFolder}/scripts/preinit-container.sh",
		"${localWorkspaceFolder}"
	]
}
